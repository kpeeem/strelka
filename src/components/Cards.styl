.close{
    display:flex;
    justify-content: center;
    align-items: center;
    position:absolute;
    z-index:3;
    width: 100%;
    background: none;
    cursor:pointer;
    opacity:0;
    transition: opacity 0.5s ease-in-out;
    transition-delay: 0s;
    top: -130px;

    &:before{
        content: url("data:image/svg+xml;base64,");
    }
}


.cards {
    display:flex;
    flex-direction:row;
    height:720px;
    width: 100%;
    margin: 30px auto;
    transform: translateX(0);
    transition: transform 0.5s ease-in-out, padding-left 0.8s ease-in-out;
    padding-left: 450px;
}

.back{
    background-color: #2253ff;
    border-radius:100%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) scale3d(1, 1, 1);
    position: fixed;
    width: 100px;
    height: 100px;
    transition: transform 2s ease-in-out;
    z-index: -1;
    opacity:0;
}

.cardsWrapper{
    padding:30px 0;
    background-color: #2253ff;
    width: 1200px;
    box-sizing:border-box;
    margin:0 auto;
    position:relative;
    transition: transform 1s ease-in-out;
    &.show{
        padding-left: 0;
        z-index: 1;
        position: relative;
        .description{
            opacity:0;
        }
        .back{
            transform:scale3d(50, 50, 1);
            opacity: 1;
        }
        .close{
            opacity:1;
        }
    }
}

.card{
    margin-left:60px;
}



.description{
    width:540px;
    height:600px;
    padding:60px;
    box-sizing:border-box;
    position:absolute;
    left:0;
    opacity:1;
    transition: opacity 0.8s ease-in-out;
}

.descriptionTitle{
    font-size: 40px;
    color: white;
    margin-bottom:35px;
}

.descriptionText{
    font-size: 25px;
    color: white;
    margin-bottom:65px;
    line-height:1.5;
}

.description{
    font-size: 18px;
    color: #777777;
    line-height: 26px;
}


.button{
    width: 260px;
    display: inline-flex;
    justify-content: space-between;
    height: 60px;
    background: transparent;
    &:before{
        content: url("data:image/svg+xml;base64,");
    }
}