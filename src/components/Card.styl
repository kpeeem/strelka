.main{
  min-width: 360px;
  height: 600px;
  position:relative;
  display:flex;
  flex-direction:column;
  box-shadow: 0 15px 20px 0 rgba(0,0,0,0.15);
  transition: box-shadow 0.3s ease-in-out;
  cursor:pointer;
  &:hover{
    box-shadow: 0 30px 40px 0 rgba(0,0,0,0.15);
  }
  &:hover .placeholder{
    max-height: 200px;
  }
}

.num{
  width: 60px;
  height: 60px;
  margin: 30px;
  font-size: 25px;
  background-color: white;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #191818;
  position:absolute;
}
.image{
  background-size: cover;
  background-position: 50%;
  background-repeat: no-repeat;
  width: 100%;
  display: flex;
  height: 100%;
  order: 0;
  flex-grow: 0;
  flex-shrink: 1;
  flex-basis: auto;
  align-self: auto;
}


.placeholder{
  background-color:white;
  padding:40px 60px;
  display:flex;
  order: 0;
  flex-grow: 1;
  flex-shrink: 0;
  flex-direction:column;
  max-height: 27px;
  transition: max-height 0.3s ease-in-out
  overflow: hidden;
}

.description{
  font-size: 18px;
  color: #777777;
  line-height: 26px;
}

.title{
  font-size: 25px;
  color: #191818;
  line-height: 36px;
  margin-bottom:25px;
}