.close{
  display:flex;
  justify-content: center;
  align-items: center;
  position:absolute;
  z-index:3;
  width: 100%;
  background: none;
  cursor:pointer;
  opacity:0;
  transition: opacity 0.5s ease-in-out;
  transition-delay: 0s;
  top: 30px;
  &:before{
    content: url("data:image/svg+xml;base64,");
  }
}


.video{
  position: absolute;
  width: 100%;
  height: 100%;
  border: none;
  z-index: 2;
  opacity:0;
  pointer-events:none;
  transform: scale(1);
  transition: opacity 0.8s ease-in-out, transform  15s ease-in-out;
}

.show{
  .video{
    opacity:1;
    transform: scale(1.1);
  }
  .buttonLine, .title, .mousey{
    opacity:0;
  }
  .close{
    opacity:1;
    transition-delay: 1s;
  }
}

.hero{
  height:720px;
  background-image:url('/assets/img/hero.png');
  width:100%;
  background-position: 50%;
  background-size:cover;
  padding-bottom: 10px;
  box-sizing: border-box;
  cursor:pointer;
  position:relative;
  overflow:hidden;
}

.hero-sticky{
    padding-top:115px;
}

:global(.headerSticky){
  & ~ .title{
    padding-top: 200px;
  }
}

.title{
  color: #fff;
  text-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'San Francisco' ,'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 60px;
  font-weight: 400;
  width: 750px;
  margin: 0 auto;
  margin-bottom:100px;
  padding-top: 100px;
  transition:/*padding-top 0.5s ease-in-out, */opacity 0.8s ease-in-out;
  opacity:1;
}


.buttonLine{
  max-width: 640px;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
  height: 160px;
  opacity:1;
  transition: opacity 0.8s ease-in-out;
  .start{
    justify-content:center;
    width: 240px;
    height: 60px;
    background-color: #2253ff;
    &:hover{
      box-shadow: inset 0px 0px 6px 0px rgba(34, 83, 255, 0.54);
    }
  }

  .showVideo{
    width: 260px;
    display:inline-flex;
    justify-content:space-between;
    height: 60px;
    background: transparent;
    &:before{
      content: url("data:image/svg+xml;base64,");
    }
  }
}

.mousey {
  width: 3px;
  padding: 1px 10px;
  height: 35px;
  border: 2px solid #fff;
  border-radius: 25px;
  opacity: 0.75;
  margin:0 auto;
  bottom:10px;
  position:relative;
  .scroller {
    margin-top:2px;
    width: 3px;
    height: 10px;
    border-radius: 25%;
    background-color: #fff;
    animation-name: scroll;
    animation-duration: 2.2s;
    animation-timing-function: cubic-bezier(.15,.41,.69,.94);
    animation-iteration-count: infinite;
  }
}

@keyframes scroll {
  0% { opacity: 0; }
  10% { transform: translateY(0); opacity: 1; }
  100% { transform: translateY(15px); opacity: 0;}
}


@media (max-width: 1200px){
  .buttonLine{
    margin-bottom: 14vw;
  }
  .title{
    margin-bottom:50px;
    width: 50vw;
    font-size: 9vw;
  }
}

@media (min-width: 640px){
  .title{
    margin-bottom:50px;
    width: 50vw;
    font-size: 4vw;
  }
  .buttonLine{
    margin-bottom: 5vw;
  }
}
@media (max-width: 640px){
  .mousey{
      display:none;
  }
  .title{
    margin-bottom:50px;
    width: 90vw;
    font-size: 9vw;
  }
}

